            <% else %>
                <span class="des"><%= @euro50_index_price_24h_change %> (<%= @euro50_index_rate_24h_change %>)<span>
            <% end %>
        </div>
        <hr class="line">
        <div class="stock-exchange-page__index__ele">
            <strong><p class="name">Nikkei 225</p></strong>
            <strong><%= @nikkei255_index_price %></strong>
            <br>
            <%= if String.to_float(@nikkei255_index_price_24h_change) > 0 do %>
                <span class="incr"><%= @nikkei255_index_price_24h_change %> (<%= @nikkei255_index_rate_24h_change %>)<span>
            <% else %>
                <span class="des"><%= @nikkei255_index_price_24h_change %> (<%= @nikkei255_index_rate_24h_change %>)<span>
            <% end %>
        </div>
        <hr class="line">
        <div class="stock-exchange-page__index__ele">
            <strong><p class="name">Crude Oil</p></strong>
            <strong><%= @snp_gsci_crude_oil_price %></strong>
            <br>
            <%= if String.to_float(@snp_gsci_crude_oil_price_24h_change) > 0 do %>
                <span class="incr"><%= @snp_gsci_crude_oil_price_24h_change %> (<%= @snp_gsci_crude_oil_rate_24h_change %>)<span>
            <% else %>
                <span class="des"><%= @snp_gsci_crude_oil_price_24h_change %> (<%= @snp_gsci_crude_oil_rate_24h_change %>)<span>
            <% end %>
        </div>
        <hr class="line">
        <div class="stock-exchange-page__index__ele">
            <strong><p class="name">Gold</p></strong>
            <strong><%= @snp_gsci_gold_price %></strong>
            <br>
            <%= if String.to_float(@snp_gsci_gold_price_24h_change) > 0 do %>
